<h2>Log in for Administration</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs grid-x grid-margin-x large-offset-2">
    <div class="cell large-4"><%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %></div>
    <div class="cell large-4"><%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %></div>
    <div class="cell large-2"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "hollow button success" %>
  </div>
  </div>
<% end %>
